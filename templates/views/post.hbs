<html>
	<head>
		<title>Dopetrope by HTML5 UP</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
		<link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/index.css" />
		<!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
	</head>
	<body class="right-sidebar" id="post">
		<div id="page-wrapper">

			<!-- Header -->
				<div id="header-wrapper">
					<div id="header">


						<!-- Nav -->
							<nav id="nav">
								<ul>
									<li><a href="/">Home</a></li>
									<li class="current"><a href="/blog">Sponsors</a></li>
								</ul>
							</nav>

					</div>
				</div>

			<!-- Main -->
				<div id="main-wrapper">
					<div class="container">
						<div class="row">
							<div class="8u 12u(mobile)">

								<!-- Content -->
									<article class="box post">
										<a href="#" class="image featured"><img src="{{data.post.coverPicture}}" alt="" /></a>
										<header>
											<h2>{{data.post.title}}</h2>
											<p>{{data.post.content.brief}}</p>
										</header>
										<p>
										  {{data.post.content.extended}}
                    </p>
										<section>
											<header>
												<h3>Option 1</h3>
											</header>
										  <span class="image featured"><img src="{{data.post.option1.picture}}" alt="" /></span>
											<p style="font-size:20px"><b>{{data.post.option1.description}}</b>: {{data.post.option1.amount}} total, {{data.post.option1.claimedAmount}} claimed, {{data.post.option1.numPendingRequest}} pending request</p>
                      <footer>
                        <a href="#" class="button">Request yours now</a>
                      </footer>
                    </section>
										<section>
											<header>
												<h3>Option 2</h3>
											</header>
										  <span class="image featured"><img src="{{data.post.option2.picture}}" alt="" /></span>
											<p style="font-size:20px"><b>{{data.post.option2.description}}</b>: {{data.post.option2.amount}} total, {{data.post.option2.claimedAmount}} claimed, {{data.post.option2.numPendingRequest}} pending request</p>
                      <footer>
                        <a href="#" class="button">Request yours now</a>
                      </footer>
                    </section>
									</article>

							</div>
							<div class="4u 12u(mobile)">

								<!-- Sidebar -->
									<section class="box">
										<a href="#" class="image featured"><img src="images/pic09.jpg" alt="" /></a>
										<p>Sponsored 3 events the past month with contribution to 50 events the past year</p>
                    <footer>
											<a href="#" class="button alt">See donation history</a>
										</footer>
									</section>
							</div>
						</div>
					</div>
				</div>

			<!-- Footer -->
				<div id="footer-wrapper">
					<section id="footer" style="border-top: none" class="container">
						<div class="row">
							<div class="12u">

								<!-- Copyright -->
									<div id="copyright">
										<ul class="links">
											<li>&copy;Judy Mou and Hannah Yang. All rights reserved.</li>
                    </ul>
									</div>

							</div>
						</div>
					</section>
				</div>
		</div>

		<!-- Scripts -->
			<script src="/js/jquery.min.js"></script>
			<script src="/js/jquery.dropotron.min.js"></script>
			<script src="/js/skel.min.js"></script>
			<script src="/js/skel-viewport.min.js"></script>
			<script src="/js/util.js"></script>
			<!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
			<script src="/js/main.js"></script>
      <script src="/js/index.js"></script>
	</body>
</html>
